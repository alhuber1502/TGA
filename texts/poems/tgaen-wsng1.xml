            <link target="authors.xml#aut_GrayTh1716" type="author"/>
            <head type="main">
               <w xml:id="tgaen-216020" n="a-0010">Song</w>
               <c/>
               <w xml:id="tgaen-216030" n="a-0020">I</w>
            </head>
            <lg n="1" xml:id="tgaen-s01115">
               <l n="1" xml:id="tgaen-l09985">
                  <w xml:id="tgaen-216070" n="a-0040">'Midst</w>
                  <c/>
                  <w xml:id="tgaen-216080" n="a-0050">beauty</w>
                  <c/>
                  <w xml:id="tgaen-216090" n="a-0060">and</w>
                  <c/>
                  <w xml:id="tgaen-216100" n="a-0070">pleasure's</w>
                  <c/>
                  <w xml:id="tgaen-216110" n="a-0080">gay</w>
                  <c/>
                  <w xml:id="tgaen-216120" n="a-0090">triumphs</w>
                  <pc xml:id="tgaen-216130" n="a-0100">,</pc>
                  <c/>
                  <w xml:id="tgaen-216140" n="a-0110">to</w>
                  <c/>
                  <w xml:id="tgaen-216150" n="a-0120">languish</w>
               </l>
               <l n="2" xml:id="tgaen-l09990">
                  <w xml:id="tgaen-216160" n="a-0130">And</w>
                  <c/>
                  <w xml:id="tgaen-216170" n="a-0140">droop</w>
                  <c/>
                  <w xml:id="tgaen-216180" n="a-0150">without</w>
                  <c/>
                  <w xml:id="tgaen-216190" n="a-0160">knowing</w>
                  <c/>
                  <w xml:id="tgaen-216200" n="a-0170">the</w>
                  <c/>
                  <w xml:id="tgaen-216210" n="a-0180">source</w>
                  <c/>
                  <w xml:id="tgaen-216220" n="a-0190">of</w>
                  <c/>
                  <w xml:id="tgaen-216230" n="a-0200">my</w>
                  <c/>
                  <w xml:id="tgaen-216240" n="a-0210">anguish</w>
                  <pc xml:id="tgaen-216250" n="a-0220">;</pc>
               </l>
               <l n="3" xml:id="tgaen-l09995">
                  <w xml:id="tgaen-216260" n="a-0230">To</w>
                  <c/>
                  <w xml:id="tgaen-216270" n="a-0240">start</w>
                  <c/>
                  <w xml:id="tgaen-216280" n="a-0250">from</w>
                  <c/>
                  <w xml:id="tgaen-216290" n="a-0260">short</w>
                  <c/>
                  <w xml:id="tgaen-216300" n="a-0270">slumbers</w>
                  <c/>
                  <w xml:id="tgaen-216310" n="a-0280">and</w>
                  <c/>
                  <w xml:id="tgaen-216320" n="a-0290">look</w>
                  <c/>
                  <w xml:id="tgaen-216330" n="a-0300">for</w>
                  <c/>
                  <w xml:id="tgaen-216340" n="a-0310">the</w>
                  <c/>
                  <w xml:id="tgaen-216350" n="a-0320">morning</w>
                  <c/>
                  <pc xml:id="tgaen-216360" n="a-0330">—</pc>
               </l>
               <l n="4" xml:id="tgaen-l10000">
                  <w xml:id="tgaen-216370" n="a-0340">Yet</w>
                  <c/>
                  <w xml:id="tgaen-216380" n="a-0350">close</w>
                  <c/>
                  <w xml:id="tgaen-216390" n="a-0360">my</w>
                  <c/>
                  <w xml:id="tgaen-216400" n="a-0370">dull</w>
                  <c/>
                  <w xml:id="tgaen-216410" n="a-0380">eyes</w>
                  <c/>
                  <w xml:id="tgaen-216420" n="a-0390">when</w>
                  <c/>
                  <w xml:id="tgaen-216430" n="a-0400">I</w>
                  <c/>
                  <w xml:id="tgaen-216440" n="a-0410">see</w>
                  <c/>
                  <w xml:id="tgaen-216450" n="a-0420">it</w>
                  <c/>
                  <w xml:id="tgaen-216460" n="a-0430">returning</w>
                  <pc xml:id="tgaen-216470" n="a-0440">;</pc>
               </l>
            </lg>
            <lg n="2" xml:id="tgaen-s01120">
               <l n="5" xml:id="tgaen-l10005">
                  <w xml:id="tgaen-216500" n="a-0450">Sighs</w>
                  <c/>
                  <w xml:id="tgaen-216510" n="a-0460">sudden</w>
                  <c/>
                  <w xml:id="tgaen-216520" n="a-0470">and</w>
                  <c/>
                  <w xml:id="tgaen-216530" n="a-0480">frequent</w>
                  <pc xml:id="tgaen-216540" n="a-0490">,</pc>
                  <c/>
                  <w xml:id="tgaen-216550" n="a-0500">looks</w>
                  <c/>
                  <w xml:id="tgaen-216560" n="a-0510">ever</w>
                  <c/>
                  <w xml:id="tgaen-216570" n="a-0520">dejected</w>
                  <pc xml:id="tgaen-216580" n="a-0530">,</pc>
               </l>
               <l n="6" xml:id="tgaen-l10010">
                  <w xml:id="tgaen-216590" n="a-0540">Sounds</w>
                  <c/>
                  <w xml:id="tgaen-216600" n="a-0550">that</w>
                  <c/>
                  <w xml:id="tgaen-216610" n="a-0560">steal</w>
                  <c/>
                  <w xml:id="tgaen-216620" n="a-0570">from</w>
                  <c/>
                  <w xml:id="tgaen-216630" n="a-0580">my</w>
                  <c/>
                  <w xml:id="tgaen-216640" n="a-0590">tongue</w>
                  <pc xml:id="tgaen-216650" n="a-0600">,</pc>
                  <c/>
                  <w xml:id="tgaen-216660" n="a-0610">by</w>
                  <c/>
                  <w xml:id="tgaen-216670" n="a-0620">no</w>
                  <c/>
                  <w xml:id="tgaen-216680" n="a-0630">meaning</w>
                  <c/>
                  <w xml:id="tgaen-216690" n="a-0640">connected</w>
                  <pc xml:id="tgaen-216700" n="a-0650" unit="sentence">!</pc>
               </l>
               <l n="7" xml:id="tgaen-l10015">
                  <w xml:id="tgaen-216710" n="a-0660">Ah</w>
                  <c/>
                  <w xml:id="tgaen-216720" n="a-0670">say</w>
                  <pc xml:id="tgaen-216730" n="a-0680">,</pc>
                  <c/>
                  <w xml:id="tgaen-216740" n="a-0690">fellow-swains</w>
                  <pc xml:id="tgaen-216750" n="a-0700">,</pc>
                  <c/>
                  <w xml:id="tgaen-216760" n="a-0710">how</w>
                  <c/>
                  <w xml:id="tgaen-216770" n="a-0720">these</w>
                  <c/>
                  <w xml:id="tgaen-216780" n="a-0730">symptoms</w>
                  <c/>
                  <w xml:id="tgaen-216790" n="a-0740">befell</w>
                  <c/>
                  <w xml:id="tgaen-216800" n="a-0750">me</w>
                  <pc xml:id="tgaen-216810" n="a-0760" unit="sentence">?</pc>
               </l>
               <l n="8" xml:id="tgaen-l10020">
                  <w xml:id="tgaen-216820" n="a-0770">They</w>
                  <c/>
                  <w xml:id="tgaen-216830" n="a-0780">smile</w>
                  <pc xml:id="tgaen-216840" n="a-0790">,</pc>
                  <c/>
                  <w xml:id="tgaen-216850" n="a-0800">but</w>
                  <c/>
                  <w xml:id="tgaen-216860" n="a-0810">reply</w>
                  <c/>
                  <w xml:id="tgaen-216870" n="a-0820">not</w>
                  <pc xml:id="tgaen-216880" n="a-0830" unit="sentence">.</pc>
                  <c/>
                  <w xml:id="tgaen-216890" n="a-0840">Sure</w>
                  <c/>
                  <w xml:id="tgaen-216900" n="a-0850">Delia</w>
                  <c/>
                  <w xml:id="tgaen-216910" n="a-0860">will</w>
                  <c/>
                  <w xml:id="tgaen-216920" n="a-0870">tell</w>
                  <c/>
                  <w xml:id="tgaen-216930" n="a-0880">me</w>
                  <pc xml:id="tgaen-216940" n="a-0890" unit="sentence">!</pc>
               </l>
            </lg>
         </div>
