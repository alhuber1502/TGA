                  <unittitle type="uniform" label="Uniform Title:">
                     <title render="doublequote" linktype="simple">[Epitaph on a Child]</title>
                  </unittitle>
                  <unittitle label="First Line:">
                     <title linktype="simple">Here, freed from pain, secure from misery, lies</title>
                  </unittitle>
                  <unitdate normal="1884" era="ce" calendar="gregorian">1884</unitdate>
               </did>
               <bibliography>
                  <bibref title="https://www.thomasgray.org/resources/biblp.shtml#S/H_1966"
